@model IEnumerable<GameStoreUI.Models.VIewModel.GenreView>

<div class="container my-container">


    <div class="row">
        <table class="table">
            <thead class="thead-dark">
                <tr>

                    <th scope="col">Name</th>



                    <th scope="col"></th>




                    <th scope="col"></th>
                </tr>


            </thead>




            <tbody>
                @foreach (var item in Model)
                {
                    using (@Html.BeginForm("Delete", "Developer", new { id = item.Id }, FormMethod.Post))
                    {

    <tr>
        <th scope="row"> @item.Name</th>

        <th scope="row">
            <a class="btn btn-primary" href='@Url.Action("Edit","Genre",routeValues: new { id = item.Id })'>Edit</a>

            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id })*@
        </th>
        <th scope="row">
            <input type="submit" value="Delete" class="btn btn-primary"/>
        </th>
    </tr>
}
}
            </tbody>
        </table>


    </div>
    @if (Model.Count() == 0)
    {

        <div class="container">

<div class="alert alert-danger" role="alert">
    Not Found  !
        </div>
</div>}
</div>







@model IEnumerable<GameStoreUI.Models.VIewModel.GameCreateViewModel>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-6 col-md-4 col-lg-3">



            <div class="card mb-4 my-card">
                <img class="card-img-top my-img" src="~/Images/Game/@item.Image" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><span class="font-weight-bold">Developer:</span> @item.Developer</li>
                    <li class="list-group-item"><span class="font-weight-bold">Genre:</span> @item.Genre</li>
                    <li class="list-group-item "><span class="font-weight-bold">Year:</span> @item.Year</li>
                    <li class="list-group-item "><span class="font-weight-bold">Price:</span> @item.Price $</li>

                </ul>
                <div class="card-body">




                </div>
            </div>
        </div>}


</div>
@if (Model.Count() == 0)
{


    <div class="alert container alert-danger" role="alert">
        Not Found  !
    </div>}
